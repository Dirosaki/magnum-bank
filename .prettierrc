{
  "trailingComma": "es5",
  "singleQuote": true,
  "semi": false,
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "arrowParens": "always",
  "endOfLine": "lf",
  "bracketSameLine": false,
  "bracketSpacing": true,
  "plugins": ["prettier-plugin-tailwindcss", "prettier-plugin-classnames"],
  "customFunctions": ["cva"],
  "overrides": [
    {
      "files": ["*.json", ".eslint*"],
      "options": {
        "trailingComma": "none"
      }
    }
  ]
}
